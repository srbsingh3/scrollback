{
  "manifest_version": 3,
  "name": "Scrollback",
  "version": "0.1.0",
  "description": "Notion-style anchor indicators for AI chat conversations (ChatGPT, Claude) for quick navigation through long threads",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*"
      ],
      "js": [
        "platform-adapters/baseAdapter.js",
        "platform-adapters/chatgptAdapter.js",
        "src/platformRouter.js",
        "src/messageDetector.js",
        "src/anchorGenerator.js",
        "src/anchorUI.js",
        "src/scrollNavigator.js",
        "src/anchorInjector.js",
        "content/main.js"
      ],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
